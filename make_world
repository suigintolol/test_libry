compiler = g++
win_compiler = i686-w64-mingw32-g++

all: libworld.so
	
libworld.so: world.o
	$(compiler) -shared -o libworld.so world.o

world.o:
	$(compiler) -c -fPIC world.cpp


win: win_libworld.so

win_libworld.so: win_world.o
	$(win_compiler) -shared -o libworld.so world.o -static-libgcc -static-libstdc++

win_world.o:
	$(win_compiler) -c -fPIC world.cpp -static-libgcc -static-libstdc++

clean:
	rm -f *.o *.so all
